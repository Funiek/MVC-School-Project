    <div>@Html.ActionLink("KOM-P", "Index", "Home", new { area = "" }, new { @class = "navbar-logo" })</div>
    <ul class="nav-wrapper float-left">
        @if (ViewData["Admin"] != null)
        {
            <li>
                @Html.ActionLink("Zarządzaj kategoriami", "Index", "CategoriesAdmin")
            </li>
            <li>
                @Html.ActionLink("Zarządzaj produktami", "Index", "ProductsAdmin")
            </li>
            <li>
                @Html.ActionLink("Zarządzaj użytkownikami", "Index", "ProductsAdmin")
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink("Procesory", "Index", "Categories", new { id = 1 })
            </li>
            <li>
                @Html.ActionLink("Karty Graficzne", "Index", "Categories", new { id = 2 })
            </li>
            <li>
                @Html.ActionLink("Płyty Główne", "Index", "Categories", new { id = 3 })
            </li>
        }
    </ul>
    <ul class="nav-wrapper float-right">
        @if (User.Identity.IsAuthenticated)
        {

            <li>
                Witaj @Html.Raw(User.Identity.Name)
            </li>
            @if (User.Identity.Name.Equals("Admin"))
            {
                <li>
                    @Html.ActionLink("Panel Administratora", "Index", "AdminPanel")
                </li>
            }
            <li>
                @Html.ActionLink("Wyloguj", "SignOut", "User")
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink("Zaloguj się", "SignIn", "User")
            </li>
            <li>
                @Html.ActionLink("Zarejestruj się", "SignUp", "User")
            </li>

        }
    </ul>
    <div class="clear"></div>
</div>