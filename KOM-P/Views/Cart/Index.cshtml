@model IEnumerable<KOM_P.Models.CartProduct>

@{
    ViewData["Title"] = "Index";
}

<h1>Koszyk</h1>


<div class="cart-container">
    <div class="cart-header row">
        <div class="col-md-4 col-xs-4">Tytuł</div>
        <div class="col-md-2 col-xs-2">Cena</div>
        <div class="col-md-2 col-xs-2">Cena promocyjna</div>
        <div class="col-md-2 col-xs-2">Ilość</div>
        <div class="col-md-2 col-xs-2">Usuń</div>
    </div>
    @foreach (var item in Model)
    {

    <div class="cart-product row">
        <div class="col-md-4 col-xs-4">@item.Name</div>
        <div class="col-md-2 col-xs-2">@item.Price</div>
        <div class="col-md-2 col-xs-2">@item.PromoPrice</div>
        <div class="col-md-2 col-xs-2">@item.Qty</div>
        <div class="col-md-2 col-xs-2"><i class="fas fa-trash-alt"></i></div>
    </div>
    }
</div>