@model KOM_P.Controllers.UserController.SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}
<link rel="stylesheet" href="~/css/Form.css" />
<div class="containter-custom">
    <h1 class="header">Logowanie</h1>

    @using (Html.BeginForm("SignIn", "User", FormMethod.Post))
    {
        <div class="container">
            <form class="form-horizontal" method="post">
                <div class="form-group">
                    <div class="label-custom col-sm-12">
                        <label asp-for="user.Login" class="control-label"></label>
                    </div>
                    <div class="col-sm-3">
                        <input asp-for="user.Login" class="form-control form-input-text-custome">
                    </div>
                </div>
                <div class="form-group">
                    <div class="label-custom col-sm-12"><label asp-for="user.PasswordHash" class="control-label col-sm2"></label></div>
                    <div class="col-sm-3">
                        <input asp-for="user.PasswordHash" class="form-control form-input-text-custome">
                    </div>
                </div>
                <div class="form-group col-sm-12 form-submit-button-custom">
                    <div class=" col-sm-7">
                        <button class="btn shop-btn effect01">Zatwierdź</button>
                    </div>
                    <div class=" col-sm-5"></div>
                </div>
            </form>
        </div>
    }
</div>