@model KOM_P.Controllers.UserController.SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}

<h1>Logowanie</h1>

@using (Html.BeginForm("SignIn", "User", FormMethod.Post))
{
    <div class="container">
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        Login:
                    </div>
                    <div class="col-sm-3">
                        <input asp-for="user.Login" class="form-control">
                    </div>
                    <div class="col-sm-8"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        Hasło:
                    </div>
                    <div class="col-sm-3">
                        <input asp-for="password" class="form-control" type="password">
                    </div>
                    <div class="col-sm-8"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-1 col-sm-10">
                    <button class="shop-btn effect01">Zatwierdź</button>
                </div>
            </div>
        </form>
    </div>
}