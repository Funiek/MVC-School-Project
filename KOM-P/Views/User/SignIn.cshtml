@model KOM_P.Controllers.UserController.SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}

<h1>Logowanie</h1>

@using (Html.BeginForm("SignIn", "User", FormMethod.Post))
{
    <div class="container">
        <form class="form-horizontal" method="post">
            <div class="form-group">
                <label asp-for="user.Login" class="control-label"></label>
                <div class="col-sm-6">
                    <input asp-for="user.Login" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label col-sm2"></label>
                <div class="col-sm-6">
                    <input asp-for="password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn effect01">Zatwierdź</button>
                </div>
            </div>
        </form>
    </div>
}