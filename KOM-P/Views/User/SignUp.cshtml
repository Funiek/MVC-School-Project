@model KOM_P.Controllers.UserController.SignInViewModel

@{
    ViewData["Title"] = "SignUp";
}
<link rel="stylesheet" href="~/css/Form.css" />
<div class="containter-custom">

    <h1 class="header">Zarejestruj się</h1>


    <form asp-action="SignUp" method="post">
        <div class="container">
            <!--div asp-validation-summary="ModelOnly" class="text-danger col-12"></!--div>-->
            <div class="row form-group ">
                <div class="col-sm-12">
                    <label asp-for="user.Login" class="control-label label-custom col-12"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="user.Login" class="form-control form-input-text-custome" />
                </div>
                <div class="col-sm-8">
                    <span asp-validation-for="user.Login" class="text-danger"></span>
                </div>

            </div>


            <div class="row form-group  ">
                <div class="col-sm-12">
                    <label asp-for="user.PasswordHash" class="control-label label-custom col-12"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="user.PasswordHash" class="form-control form-input-text-custome" />
                </div>
                <div class="col-sm-8">
                    <span asp-validation-for="user.PasswordHash" class="text-danger "></span>
                </div>

            </div>



            <div class=" row form-group  ">
                <div class="col-sm-12">
                    <label asp-for="user.Email" class="control-label label-custom col-12"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="user.Email" class="form-control form-input-text-custome" />
                </div>
                <div class="col-sm-8">
                    <span asp-validation-for="user.Email" class="text-danger "></span>
                </div>

            </div>
            
            <div class="form-group form-submit-button-custom row">
                <button type="submit" class="btn shop-btn effect01">Stwórz  </button>
            </div>
        </div>
    </form>


</div>