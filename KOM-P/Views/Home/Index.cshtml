@using KOM_P.Models
@model List<KOM_P.Controllers.HomeController.IndexViewModel>
@{
    ViewBag.Title = "Strona Główna";
}

<div class="banner">
    <a href="#"><img src="~/img/WYSIWYG/index-banner.jpg" /></a>
</div>

<div class="promo-list">
    <div class="promo-list-title">Polecamy</div>
    <div class="promo-list-wrapper">
        <div class="row">
            @foreach (var promoProduct in Model)
            {
                <div class="col-xs-12 col-md-3 col-lg-3">
                    <div class="product">
                        <div class="product-img">
                            <a href="@Url.Action("Details","Products")/@Html.Raw(promoProduct.product.Id)"><img src="@Html.Raw(promoProduct.productLink)" alt="Zdjęcie" /></a>
                        </div>
                        <div class="product-title">
                            @Html.Raw(promoProduct.product.Name)
                        </div>
                        <div class="product-price">
                            @Html.Raw(promoProduct.product.Price)&nbsp;zł
                        </div>
                        <div class="product-special-price">
                            99,99&nbsp;zł
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>