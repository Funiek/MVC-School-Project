@model KOM_P.Controllers.ProductsController.DetailsViewModel

@{
    ViewData["Title"] = Model.product.Name;
}

<div>
    <h4>Product</h4>
    <hr />
    <a href="#"><img src="@Html.Raw(Model.productLink)" alt="Zdjęcie" /></a>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.dateOfAdding)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.dateOfAdding)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.SKU)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.SKU)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.product.Price)&nbsp;zł
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Wróć do kategorii", "Index", "Categories", new { id = Model.product.CategoryId })
    @Html.ActionLink("Wróć do strony głównej", "Index", "Home")
</div>
